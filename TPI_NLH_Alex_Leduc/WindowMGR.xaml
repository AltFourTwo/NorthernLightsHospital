<Window x:Class="TPI_NLH_Alex_Leduc.WindowMGR"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPI_NLH_Alex_Leduc"
        mc:Ignorable="d"
        Title="WindowMGR" Height="480" Width="726" ResizeMode="NoResize"
        KeyDown="Window_KeyDown">
    <Grid>
        <Menu x:Name="menu" Height="25" VerticalAlignment="Top">
            <MenuItem Header="_Session" Height="25" >
                <MenuItem Name="miAdmin" Header="_Activer Mode Admin" InputGestureText="Ctrl+A" Click="miAdmin_Click"/>
                <MenuItem Name="miRetrour" Header="_Retour" InputGestureText="Ctrl+R" Click="miRetour_Click"/>
                <MenuItem Name="miExit" Header="_Quitter" InputGestureText="Alt+F4" Click="miExit_Click"/>
            </MenuItem>
        </Menu>
        <Frame x:Name="mainFrame" Height="426" VerticalAlignment="Bottom" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
